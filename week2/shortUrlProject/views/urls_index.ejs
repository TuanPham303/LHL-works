<!DOCTYPE html>
<html lang="en">
<head>
  <% include partials/_header.ejs %>
</head>
<body>

  <form action="/" method="POST">
    <label for="longURL">Enter a URL:</label>
    <input id="longURL" type="text" name="longURL" value="http://" style="width: 300px">
    <input type="submit" value="Submit">
  </form>

  <div>
    <p>List of urls:</p>
    <ul>
      <% for(let url in urls){ %>
        <li><a href='/urls/<%= url %>'><%= url %> -> <%= urls[url] %></a></li>
      <% } %>
    </ul>
  </div>
  

</body>
</html>